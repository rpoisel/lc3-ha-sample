TYPE
	MQTT_RC : DINT (OK := 0);
	MQTT_STATE : SINT (INVALID := -1, CONNECTING := 5, CONNECTED := 6);
	MQTT_VALUE : BYTE (DUMMY := 16#FF);
	MQTT_BROKER : STRING[255] (LOCALHOST := '127.0.0.1');
	MQTT_CLIENTID : STRING[255] (OG_READ := 'OG Read', OG_WRITE := 'OG Write');
	MQTT_TOPICS : STRING[255] (BATH := 'bath', KITCHEN := 'kitchen');
	MQTT_ADDRESSES : INT(PCF8574_1 := 16#20);
END_TYPE
